<odoo>
    <data>
        <record id="mrp_request_form_view" model="ir.ui.view">
            <field name="name">mrp_request_form_view</field>
            <field name="model">mrp.request</field>
            <field name="arch" type="xml">
                <form>
                    <!--                    <header>-->
                    <!--                        <button name="action_update" type="object"-->
                    <!--                                string="Update" states="confirmed" class="btn-primary"-->
                    <!--                                groups="sales_policy.modify_pricelist_group"-->
                    <!--                        />-->

                    <!--                        <button name="action_confirm" type="object"-->
                    <!--                                string="Confirm" class="btn-primary" states="draft"-->
                    <!--                                groups="sales_policy.sales_policy_manager_group"-->
                    <!--                        />-->

                    <!--                        &lt;!&ndash;                        <button name="action_high_approve" type="object"&ndash;&gt;-->
                    <!--                        &lt;!&ndash;                                string="HR Manager Approve" states="confirmed" class="btn-primary"&ndash;&gt;-->
                    <!--                        &lt;!&ndash;                                groups="ommat_training_module.training_dept_manager_group"/>&ndash;&gt;-->

                    <!--                        &lt;!&ndash;                        <button name="action_approve" type="object"&ndash;&gt;-->
